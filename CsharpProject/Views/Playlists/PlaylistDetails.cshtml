@model Playlists

<h2>@Model.Name</h2>

<table class="table">
    <thead>
        <tr>
            <th>Name</th>
            <th></th>
        </tr>
    </thead>
    <tbody>
    @foreach (var song in DataBaseSelect.SelectPlaylistsSongs(Model.PlaylistID))
    {
        <tr>
            <td>@song.Name</td>
            <td><a href="@Url.Action("AddToFavorites", new { id = song.SongID, playlistID = Model.PlaylistID})">Favorite</a></td>
        </tr>
    }
    </tbody>
</table>

<h3>Recomended</h3>

<table class="table">
    <thead>
        <tr>
            <th>Name</th>
            <th></th>
        </tr>
    </thead>
    <tbody>
    @foreach (var song in DataBaseSelect.SelectMostLikedSongInMostPopularGenreInPlaylist(Model.PlaylistID))
    {
        <tr>
            <td>@song.Name</td>
            <td><a href="@Url.Action("AddToFavorites", new { id = song.SongID, playlistID = Model.PlaylistID})">Favorite</a></td>
        </tr>
    }
    </tbody>
</table>
